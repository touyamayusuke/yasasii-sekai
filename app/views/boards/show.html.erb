
<div data-controller="gentle-mode-all" class="mb-4 flex flex-col sm:flex-row sm:gap-4 sm:items-center">
  <h1 class="text-lg sm:text-xl font-bold flex-1"><%= @board.title %></h1>
  <div class="flex gap-2 text-xs sm:text-sm mt-2 sm:mt-0">
    <button type="button" data-action="gentle-mode-all#showOriginal" class="px-2 sm:px-3 py-1 bg-slate-200 rounded cursor-pointer hover:bg-gray-300">原文モード</button>
    <button type="button" data-action="gentle-mode-all#showGentle" class="px-2 sm:px-3 py-1 bg-orange-200 rounded cursor-pointer hover:bg-orange-300">優しい世界モード</button>
  </div>
</div>

<div class="space-y-2 mb-6" id="posts">
  <%= turbo_frame_tag "posts" do %>
    <%= render @posts %>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="p-4 bg-white border rounded">
    <h2 class="font-semibold mb-2">新規投稿</h2>
    <%= render "posts/form", board: @board, post: @post %>
  </div>
<% else %>
  <p class="text-sm text-gray-600">投稿するにはログインしてください。</p>
<% end %>