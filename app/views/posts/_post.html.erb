<%= turbo_frame_tag dom_id(post) do %>
  <div class="p-2 sm:p-3 bg-white border rounded flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3 mb-2" data-controller="gentle-mode">
    <div class="w-full min-w-0">
      <div data-gentle-mode-target="body">
        <p class="whitespace-pre-wrap text-sm sm:text-base break-words" data-gentle-mode-target="original" style="display:block;"><%= post.body %></p>
        <p class="whitespace-pre-wrap text-sm sm:text-base break-words" data-gentle-mode-target="gentle" style="display:none;"><%= post.gentle_body.presence || '（優しい文がありません）' %></p>
      </div>
      <p class="text-xs text-gray-500 mt-1">
        by <%= post.user.name || post.user.email %> / <%= l(post.created_at, format: :short) %>
      </p>
    </div>
    <% if current_user == post.user %>
      <%= link_to [post.board, post],
            data: { turbo_method: :delete, turbo_confirm: "削除しますか？" },
            class: "inline-flex items-center whitespace-nowrap gap-1 px-3 sm:px-4 py-2 sm:py-3 text-xs sm:text-sm font-medium text-white rounded bg-gray-500 hover:bg-gray-700 transition flex-shrink-0" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
            viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12" />
        </svg>
        <span>削除</span>
      <% end %>
    <% end %>
  </div>
<% end %>